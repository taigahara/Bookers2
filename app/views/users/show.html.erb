<div class="row">
<%= render partial: "books/list", locals: { user: @user, book: @book } %>

  <div class="col-xs-9" >
    <table class="table table-striped">
      <h1>Books</h1>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
          <td><%= link_to book.title, book_path(book) %></>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


