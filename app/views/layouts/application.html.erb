<!DOCTYPE html>
<html>
  <head>
    <title>Book2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  <nav>
  <div class="title">Bookers2</div>
  <ul>
    <% if user_signed_in? %>
      <li>
      <span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to 'Home', user_path(current_user.id) %>
      </li>
      <li>
      <span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= link_to 'Users', users_path %>
      </li>
      <li>
      <span class="glyphicon glyphicon-book" aria-hidden="true"></span><%= link_to 'Books', books_path %>
    </li>
      <li>
      <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span><%= link_to "logout", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
    <span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to 'HOME', "/" %>
      </li>
      <li>
      <span class="glyphicon glyphicon-link" aria-hidden="true"></span><%= link_to 'about', home_about_path %>
      </li>
      <li>
      <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span><%= link_to "sign up", new_user_registration_path %>
      </li>
      <li>
      <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span><%= link_to "login", new_user_session_path %>
      </li>
    <% end %>
  </ul>
  </nav>
  </header>

 <div class="container">
 
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>
 <%= yield %>
 </div>

 </body>
</html>
